<p id="notice"><%= notice %></p>
<div class="hold">
    <div class="container">

        <h2>Fields Summary</h1>


      <table class ="table-minimal">
        <thead>
          <tr>
            <th>Description</th>
            <th>Acres</th>
            <th>Rent</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @fields.each do |field| %>
            <tr>
              <td><%= field.description %></td>
              <td><%= field.acres %></td>
              <td><%= number_to_currency(field.rent, precision: 0) %></td>
              <td><%= link_to 'Show', field %></td>
              <td><%= link_to 'Edit', edit_field_path(field) %></td>
              <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Field', new_field_path %>
    </div>
  </div>
